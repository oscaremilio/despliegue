{% extends "base.njk" %}

{% block titulo %}Libros | Ficha{% endblock %}

{% block contenido %}

    <h1>Ficha del libro</h1>
        <p><strong>Titulo:</strong> {{ libro.titulo }}</p>
        <p><strong>Editorial:</strong> {{ libro.editorial }}</p>
        <p><strong>Precio:</strong> {{ libro.precio }}</p>
        {% if libro.portada %}
            <img src="/uploads/{{ libro.portada }}" class="img-fluid" alt="Portada del libro {{ libro.titulo }}" width="320" height="240">
        {% endif %}
{% endblock %}