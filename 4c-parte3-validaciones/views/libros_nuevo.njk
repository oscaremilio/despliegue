{% extends "base.njk" %}

{% block titulo %}Libros | Nuevo{% endblock %}

{% block contenido %}

    <h1>Inserci√≥n de nuevo libro</h1>
    
    <form action="/libros" method="post" enctype="multipart/form-data">
        <div class="form-group">
            
            <label>Titulo:
                {% if errores.titulo %}
                    <br> <span class="text-danger">{{ errores.titulo }}</span><br>
                {% endif %}
                <input type="text" class="form-control" name="titulo"
                placeholder="Titulo del libro..." value = {{ datos.titulo}}>
            </label>
        </div>
        <div class="form-group">
            <label>Editorial:
                <input type="text" class="form-control" name="editorial"
                placeholder="Editorial del libro..." value = {{ datos.editorial}}>
            </label>
        </div>
        <div class="form-group">
            <label>Precio:
                {% if errores.precio %}
                    <br> <span class="text-danger">{{ errores.precio }}</span><br>
                {% endif %}
                <input type="number" class="form-control" name="precio"
                placeholder="Precio del libro..." value = {{ datos.precio}}>
            </label>
        </div>
        <div class="form-group">
            <label>Portada:
                <input type="file" class="form-control" name="portada"
                placeholder="Portada del libro...">
            </label>
        </div>
        <button type="submit" class="btn btn-primary">
            Enviar
        </button>
    </form>

{% endblock %}